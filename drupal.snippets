snippet hook_block

	/**
	 * Implementation of hook_block()
	 */
	function `Filename()`_block($op = 'list', $delta = 0, $edit = array()) {
		switch ($op) {
			case 'list':
				${1}
			case 'configure':
			case 'save':
			case 'view':
		}
	}
	
snippet hook_menu

	/**
	 * Implementation of hook_menu()
	 */
	function `Filename()`_menu() {
		$${1:items} = array();
		
		// Put your menu items here.
		$$1['${2:path}'] = array(
		  ${3}
		);
		
		return $$1;
	}
	
